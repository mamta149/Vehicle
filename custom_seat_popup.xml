<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/splashbackground"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_no_of_seats"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColorHint="@color/darkgrey">

            <EditText
                android:id="@+id/et_no_of_seats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/nliveo_black"
                android:hint="@string/enter_no_of_seats"
                android:textColor="@color/nliveo_black"
                android:textColorHint="@color/nliveo_black"
                android:textSize="12sp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/til_no_of_seats"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/darkgrey">

            <EditText

                android:id="@+id/et_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/nliveo_black"
                android:hint="@string/enter_destination"
                android:textColor="@color/nliveo_black"
                android:textColorHint="@color/nliveo_black"
                android:textSize="12sp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Ok"
            android:textColor="@color/nliveo_black"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>